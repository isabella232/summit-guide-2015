%ion-scroll
  .banner.banner-summit
    %h2 Summer Summit 2015

  %section.intro
    .locations
      .location
        %h3 Denver Office
        .address
          %i.icon.ion-location
          1600 Champa St, #340
        %directions-link{address: "1600 Champa St"}

      .location
        %h3 Sheraton Downtown
        .address
          %i.icon.ion-location
          1550 Court Pl
        %directions-link{address: "1550 Court Pl"}

  %section.section-schedule
    %h3.section-title Schedule

    %div{ng-repeat: "(day, itinerary) in schedule"}
      %h4.day
        %i.icon.ion-calendar
          %span.day-date {{ day | date: "dd" }}

        .day-title {{ day | date: "EEEE" }}

      %dl.itinerary
        %dt{ng-repeat-start: "(time, title) in itinerary"}
          {{ time | time }}

        %dd{ng-repeat-end: true}
          {{ title }}
